extends layout

block content
  .container
    h1 Register
    p Please register using the form below.
    ul.errors
        if errors
            each error, i in errors
                li.alert.alert-danger #(error.msg)
    form(method='post', action='/users/login', enctype='multipart/form-data')
      .container    
        .form-group
            label Username
            input.form-control(name='username', type='text', placeholder='Username')
        .form-group
            label Password
            input.form-control(name='password', type='password', placeholder='Enter Password')
        input.btn.btn-default(name='submit', type='submit', value='Log In')
    